#! /bin/bash

ip='114.114.114.114'

max_packet_loss=90

CheckNetwork()
{
	ip=$1

	res=`ping -c 10 -s 10 $ip | grep loss`

	res=`echo $res '&'`

	while true
	do

		tmp=`echo $res | awk '{print $1}'`

		echo $tmp | grep % > /dev/null
	
		if [ $? == 0 ]
		then
			break
		fi

		if [ '&' == "$tmp" ]
		then
			tmp="100%"
			break
		fi

		res=`echo ${res#$tmp}`

	done

	len=`echo ${#tmp}`
	len=`expr $len - 1`
	
	packet_loss=`echo ${tmp:0:$len}`
	
	expr $packet_loss - 0
	
	return 
}

cur_packet_loss=$(CheckNetwork $ip)

if [ "$cur_packet_loss" -gt "$max_packet_loss" ]
then
	echo "1"
else
	echo "0"
fi




